{{>header}}
<h1 class="title" style="font-size: 60px;">Stock de Productos</h1>
{{#if isRender}}
    <div class="d-flex p-2 flex-wrap contenedor">
        {{#each productos}}
            <div class="card tarjeta">
                <img class="card-img-top img-fluid" alt="..." src="{{this.thumbnail}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">Precio: {{this.price}} $</p>
                </div>
            </div>
        {{/each}}
    </div>
    {{else}}
        <div class="contenedor card tarjeta title" style="height:200px">No hay Productos</div>
{{/if}}
{{>footer}}