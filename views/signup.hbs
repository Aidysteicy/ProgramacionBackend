
<div class="container">
    <h1 class="center">Registro de Usuario </h1>
    <form action="http://localhost:8080/signup" method="post">
        <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">Ingrese su Email</label>
            <input type="text" class="col-sm-10" id="username" name="username" placeholder="Email" required>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">Ingrese su Contrase√±a</label>
            <input type="text" class="col-sm-10" id="password" name="password" placeholder="Password" required>
        </div>
        <div class="form-group row">
            <label for="nombre" class="col-sm-2 col-form-label">Ingrese su Nombre</label>
            <input type="text" class="col-sm-10" id="nombre" name="nombre" placeholder="Nombre">
        </div>
        <div class="form-group row">
            <label for="direccion" class="col-sm-2 col-form-label">Ingrese su Direccion</label>
            <input type="text" class="col-sm-10" id="direccion" name="direccion" placeholder="Direccion">
        </div>
        <div class="form-group row">
            <label for="telefono" class="col-sm-2 col-form-label">Ingrese su Telefono</label>
            <input type="text" class="col-sm-10" id="telefono" name="telefono" placeholder="(+prefijo)XXX-XXXX">
        </div>
        <div class="form-group row">
            <label for="avatar" class="col-sm-2 col-form-label">Ingrese su Avatar</label>
            <input type="text" class="col-sm-10" id="avatar" name="avatar" placeholder="http://...">
        </div>
        <button type="submit" class="btn btn-secondary" id="registrar">Registrar</button>
    </form>
</div>